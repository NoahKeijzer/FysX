@model PatientFileModel

<link rel="stylesheet" href="~/css/Patient/AddPatientFileStyle.css" />
<script src="~/js/MenuItems.js"></script>
<link rel="stylesheet" href="~/css/Patient/AddPatientStyle.css" />
<script src="~/js/AddPatientFileScript.js"></script>

<body>
    <div class="add-patientfile">
        <div class="add-patientfile-title">
            <h4>Patientdossier toevoegen</h4>
        </div>
        <form asp-action="AddPatientFile" method="post" class="form">
            <div class="form-personal">
                <input type="email" asp-for="PatientEmail" value="@Model.PatientEmail" class="hidden"/>
                <div class="form-input-group">
                    <label asp-for="Complaints">Klachten:</label>
                    <textarea asp-for="Complaints" class="input-field-form"></textarea>
                </div>
                <div class="form-input-group">
                    <label>Diagnose categorie:</label>
                    <select id="category" class="input-field-form" asp-items="@ViewBag.Categories" onchange="inputChanged()">
                    <option value=""></option>
                    </select>
                </div>
                <div class="form-input-group">
                    <label asp-for="DiagnosisCode">Diagnose omschrijving:</label>
                    <select id="diagnosis" asp-for="DiagnosisCode" class="input-field-form"></select>
                </div>
            </div>
            <div class="form-contact">
                <div class="form-input-group">
                    <label asp-for="TreatorEmail">Behandelaar:</label>
                    <select asp-for="TreatorEmail" class="input-field-form" asp-items="@ViewBag.Treators">
                    </select>
                </div>
                <div class="form-input-group">
                    <label asp-for="TreatmentsPerWeek">Behandelingen per week:</label>
                    <input type="number" class="input-field-form" asp-for="TreatmentsPerWeek" />
                </div>
                <div class="form-input-group">
                    <label asp-for="MinutesPerSession">Minuten per behandeling:</label>
                    <input type="number" class="input-field-form" asp-for="MinutesPerSession" />
                </div>
            </div>
            <div class="form-submit">
                <button class="btn-active-menu" type="submit">Maak patientdossier aan</button>
                <div asp-validation-summary="All"></div>
            </div>
        </form>
    </div>
</body>

<script>
    activeMenu2();
</script>